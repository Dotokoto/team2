<div class="quest-page-controls row">
    <div class="col-xs-12 center-block">
        <input type="hidden" value="{{quest._id}}" id="questId">
        {{#if started}}
            <button class="btn btn-success quest-page-controls__button-begin" disabled>Квест начат</button>
        {{else}}
            <button class="btn btn-success quest-page-controls__button-begin begin">Начать</button>
        {{/if}}
        {{#if quest.editAllowed}}
            <a href="/edit-quest/{{quest.id}}" class="btn btn-primary quest-page-controls__button-edit">Редактировать</a>
        {{/if}}
    </div>
</div>
