<div class="add-stage-form">
    <div class="add-stage-form__add-meta-media">
        <label for="add-stage-form__add-meta-media_img" class="add-stage-form__add-meta-media_img-label">
            <input type="file" class="add-stage-form__add-meta-media_input-img"
                   id="add-stage-form__add-meta-media_img">
            {{#if editing}}
                <img src="{{stage.photo}}" class="add-stage-form__add-meta-media_img">
            {{else}}
                <img src="photo_camera.png" class="add-stage-form__add-meta-media_img">
            {{/if}}
        </label>
        <div class="add-stage-form__add-meta-media_add-geo">
            <p>Геолокация</p>
        </div>
    </div>

    <div class="add-stage-form__add-meta-text">
        {{#if editing}}
            <input class="add-stage-form__add-meta-text_add-name" type="text" placeholder="Название этапа">
            <textarea class="add-stage-form__add-meta-text_add-description" placeholder="Подсказка"></textarea>
        {{else}}
            <input class="add-stage-form__add-meta-text_add-name" type="text" placeholder="Название этапа"
                   value="{{stage.name}}">
            <textarea class="add-stage-form__add-meta-text_add-description" placeholder="Подсказка">
                {{stage.description}}
            </textarea>
        {{/if}}
    </div>
</div>
